{% extends 'MopaBootstrapBundle::base_initializr.html.twig' %}

{% block head_style %}
    {% stylesheets
        '@MopaBootstrapBundle/Resources/public/less/mopabootstrapbundle.less'
        '@BernusDesignBundle/Resources/less/global.less'
        '@BernusDesignBundle/Resources/less/border.less'
        filter='less,yui_css,cssrewrite'
        output='css/design.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    {% if author is defined %}
        {% if author == "Oxylos" %}
            {% stylesheets
                '@BernusDesignBundle/Resources/less/Oxylos.less'
                filter='?yui_css'
                output='css/Oxylos.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endif %}

        {% if author == "Tarran" %}
            {% stylesheets
                '@BernusDesignBundle/Resources/less/Tarran.scss'
                filter='compass,yui_css'
                output='css/Tarran.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endif %}
    {% endif %}
{% endblock head_style %}

{% block page_header %}
{% endblock page_header %}

{% block header %}
{% if author is defined %}
    {% if author == "Oxylos" %}
    {% endif %}

    {% if author == "Tarran" %}
<div id="header">
    <img src="/bundles/bernusdesign/images/Tarran/header_outre_ca.png" alt="Outre-Ca">
</div>

<div id="chapter_nav">
    <div id="table_of_content">
        <a href="{{ path('blog', { 'author': "Dora", 'page': 1 }) }}">Table des matières</a>
    </div>
    <div id="resume">
        <a href="{{ path('about') }}">Reprendre depuis la dernière lecture</a>
    </div>
</div>
    {% endif %}
{% endif %}
{% endblock header %}
