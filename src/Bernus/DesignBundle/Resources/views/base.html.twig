{% extends 'MopaBootstrapBundle::base_initializr.html.twig' %}

{% block head_style %}
    {% stylesheets
        '@MopaBootstrapBundle/Resources/public/less/mopabootstrapbundle.less'
        '@BernusDesignBundle/Resources/less/global.less'
        '@BernusDesignBundle/Resources/less/border.less'
        filter='less,yui_css,cssrewrite'
        output='css/design.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    {% if author is defined %}
        {% if author == "Oxylos" %}
            {% stylesheets
                '@BernusDesignBundle/Resources/less/Oxylos.less'
                filter='yui_css'
                output='css/Oxylos.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endif %}

        {% if author == "Tarran" %}
            {% stylesheets
                '@BernusDesignBundle/Resources/less/Tarran.less'
                filter='yui_css'
                output='css/Tarran.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endif %}
    {% endif %}
{% endblock head_style %}
